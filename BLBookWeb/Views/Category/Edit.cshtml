@model Category

<h1 class="pb-3">Edit Category</h1>

<form method="post" class="border border-primary rounded p-4 bg-dark">
	<label asp-for="Name" class="text-light pb-2"></label>
	<input asp-for="Name" class="form-control rounded"/>
	<span asp-validation-for="Name" class="text-danger"></span>
	<br/>
	<label asp-for="DisplayOrder" class="text-light pb-2"></label>
	<input asp-for="DisplayOrder" class="form-control rounded"/>
	<span asp-validation-for="DisplayOrder" class="text-danger"></span>
	<br/>
	<button type="submit" class="btn btn-primary mt-3">Save Changes</button>
	<a asp-controller="Category" asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}