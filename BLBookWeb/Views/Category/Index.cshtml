@model List<Category>

<div class="row my-5">
	<div class="col-6">
		<h2>Category List</h2>
	</div>
	<div class="col-6 text-end">
		<a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp; New Category</a>
	</div>
</div>

<table class="table table-bordered table-striped my-3">
	<thead>
	<tr>
		<th>Id</th>
		<th>Category</th>
		<th>Display Order</th>
	</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
		{
			<tr>
				<td>@obj.Id</td>
				<td>@obj.Name</td>
				<td>@obj.DisplayOrder</td>
			</tr>
		}
	</tbody>
</table>