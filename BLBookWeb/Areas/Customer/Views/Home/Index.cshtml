<div class="row pb-3">
    @foreach (Product product in Model)
    {
                        <div class="col-xl-3 col-lg-4 col-sm-6 col-12">
                            <div class="row p-2">
                                <div class="col-12 p-1">
                        <div class="card p-3" style="max-width: 540px">
                            <img src="@product.ImageUrl" class="card-img-top p-1" alt="Image of the book">
                            <div class="card-body">
                                <h5 class="card-title">@product.Title</h5>
                                <p class="card-text">@product.Description</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item fw-bold">@product.Author</li>
                            </ul>
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <a asp-area="Customer" asp-controller="Home" asp-action="Buy" asp-route-id="@product.Id" class="btn btn-primary">Buy Now</a>
                                <li class="list-group-item fw-bold">$@product.ListPrice</li>
                            </div>
                        </div>  
                        </div>
                        </div>
                            </div>
    }
</div>