@model List<Product>

<div class="row my-5">
    <div class="col-6">
        <h2>Product List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp; New Product</a>
    </div>
</div>

<table class="table table-bordered table-striped my-3">
    <thead>
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Author</th>
        <th>List Price</th>
        <th>Category</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model.OrderBy(u=>u.Title))
    {
        <tr>
            <td>@obj.Id</td>
            <td>@obj.Title</td>
            <td>@obj.Author</td>
            <td>$@obj.ListPrice</td>
            <td></td>
            <td>
                <div class="button-group">
                    <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>