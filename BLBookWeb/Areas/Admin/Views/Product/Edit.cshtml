@model Product

<h1 class="pb-3">Edit Product</h1>

<form method="post" class="border border-primary rounded p-4 bg-dark">
    <label asp-for="Title" class="text-light pb-2"></label>
    <input asp-for="Title" class="form-control rounded shadow-none"/>
    <span asp-validation-for="Title" class="text-danger"></span>
    <br/>
    <label asp-for="Description" class="text-light pb-2"></label>
    <textarea asp-for="Description" class="form-control rounded shadow-none"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
    <br/>
    <label asp-for="Author" class="text-light pb-2"></label>
    <input asp-for="Author" class="form-control rounded shadow-none"/>
    <span asp-validation-for="Author" class="text-danger"></span>
    <br/>
    <label asp-for="ISBN" class="text-light pb-2"></label>
    <input asp-for="ISBN" class="form-control rounded shadow-none"/>
    <span asp-validation-for="ISBN" class="text-danger"></span>
    <br/>
    <label asp-for="ListPrice" class="text-light pb-2"></label>
    <input asp-for="ListPrice" class="form-control rounded shadow-none"/>
    <span asp-validation-for="ListPrice" class="text-danger"></span>
    <br/>
    <label asp-for="Price" class="text-light pb-2"></label>
    <input asp-for="Price" class="form-control rounded shadow-none"/>
    <span asp-validation-for="Price" class="text-danger"></span>
    <br/>
    <label asp-for="Price50" class="text-light pb-2"></label>
    <input asp-for="Price50" class="form-control rounded shadow-none"/>
    <span asp-validation-for="Price50" class="text-danger"></span>
    <br/>
    <label asp-for="Price100" class="text-light pb-2"></label>
    <input asp-for="Price100" class="form-control rounded shadow-none"/>
    <span asp-validation-for="Price100" class="text-danger"></span>
    <br/>
    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary mt-3">Back to Products</a>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}