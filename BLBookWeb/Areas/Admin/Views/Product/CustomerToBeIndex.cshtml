@model List<Product>

<div class="row my-5">
    <div class="col-6">
        <h2 class="py-4" style="font-size: 3rem;">Products</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp; New Product</a>
    </div>
</div>

<div class="container py-4">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5">
        @foreach (Product product in Model)
        {
            <div class="card g-3" style="max-width: 540px">
                <img src="https://picsum.photos/200/300" class="card-img-top" alt="Image of the book">
                <div class="card-body">
                    <h5 class="card-title">@product.Title</h5>
                    <p class="card-text">@product.Description</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item fw-bold">@product.Author</li>
                </ul>
                <div class="card-body d-flex justify-content-between align-items-center">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary">Edit</a>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                    <li class="list-group-item fw-bold">$@product.ListPrice</li>
                </div>
            </div>  
        }
    </div>
</div>